<div class="main-container">
  <h1>Create a new post</h1>
	<%= form_with model: @post , url: "users/#{@user.id}/posts" do |f|%>
	  <div class="form">
	    <%= f.text_field :Title, placeholder: "Title", required: true, class: "input" %>
		  <%= f.text_area :Text, placeholder: "Post text", required: true, class: "input input-area" %>
		  <%= f.submit "Post", class: "submit-btn" %>
		</div>
	<%end%>
</div>